# Session Configuration
# Duration for which sessions remain valid (e.g., "24h", "7d", "30m")
SESSION_DURATION=24h

# Secret key for signing session tokens
SESSION_SECRET=secret-key

# Persistence
POSTGRES_DSN=postgres://primind_user:primind_password@postgres:5432/primind_db?sslmode=disable
REDIS_ADDR=redis:6379
# REDIS_PASSWORD=
REDIS_DB=0

# Google OIDC Configuration
OIDC_GOOGLE_CLIENT_ID=
OIDC_GOOGLE_CLIENT_SECRET=
OIDC_GOOGLE_REDIRECT_URI=
OIDC_GOOGLE_SCOPES=openid,profile
OIDC_GOOGLE_ISSUER_URL=https://accounts.google.com

# Task Service Configuration
AUTH_SERVICE_URL=http://localhost:8080
DEVICE_SERVICE_URL=http://localhost:8080

# Task Queue Configuration
# Optional: if unset, reminders will not be enqueued
PRIMIND_TASKS_URL=http://localhost:8081
REMIND_REGISTER_QUEUE_NAME=remind-register
REMIND_CANCEL_QUEUE_NAME=remind-cancel
TASK_QUEUE_MAX_RETRIES=3

# Google Cloud Tasks Configuration (required when building with -tags=gcloud)
# GCLOUD_PROJECT_ID=your-project-id
# GCLOUD_LOCATION_ID=asia-northeast1
# GCLOUD_REMIND_REGISTER_QUEUE_ID=remind-register-queue
# GCLOUD_REMIND_CANCEL_QUEUE_ID=remind-cancel-queue
# GCLOUD_REMIND_TARGET_URL=https://your-service.run.app/api/v1/remind
